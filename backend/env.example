# K8s Chat - Goose Powered Configuration

# API Configuration
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Anthropic Configuration (required for Goose)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# Goose Configuration
GOOSE_CONFIG_PATH=./goose-config.yaml
GOOSE_SESSION_TIMEOUT=3600
GOOSE_EXTENSIONS_PATH=./extensions

# MCP Server Configuration
K8S_MCP_SERVER_URL=http://localhost:8080

# K8s Extension Configuration
K8S_DEFAULT_NAMESPACE=default
KUBECTL_CONTEXT=

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
