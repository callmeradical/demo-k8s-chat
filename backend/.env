# K8s Chat Configuration

# API Configuration
DEBUG=true
LOG_LEVEL=DEBUG

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Anthropic Configuration (required for full functionality)
ANTHROPIC_API_KEY=test-key-placeholder
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# Temporal Configuration (optional - will fallback gracefully)
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=k8s-chat-queue

# MCP Server Configuration (optional - will work without)
K8S_MCP_SERVER_URL=http://localhost:8080

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
